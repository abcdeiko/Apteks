    <corners
        android:radius="0dp"
        />
    <gradient
        android:angle="45"
        android:centerX="45%"
        android:centerColor="#0B540B"
        android:startColor="#2C8726"
        android:endColor="#14B534"
        android:type="linear"
        />
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp"
        />
    <size
        android:width="270dp"
        android:height="60dp"
        />
    <stroke
        android:width="2dp"
        android:color="#ff313131"
        />
</shape>